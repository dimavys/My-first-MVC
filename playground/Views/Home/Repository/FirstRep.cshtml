@model playground.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        h1 {
            text-align: center;
            font-size: 250%;
            position: relative;
            background: #b30000;
        }

        h2 {
            text-align: center;
            position: relative;
        }

        p {
            text-align: center;
            font-size: 200%;
        }

        p1 {
            font-size: 150%;
        }

        footer {
            position: fixed;
            width: 100%;
            left: 0;
            bottom: 0;
            background: #b30000;
            color: black;
        }
    </style>
</head>
<body>
    <div class="text-center">
        <h1>This is a task manager!</h1>
        <h2> @Model.Nickname, start managing your tasks right now</h2>
        <p><a asp-controller="Repository" asp-action="Insertion">Create your first repository!</a></p>
    </div>
    <footer>
        <p1>All rights and lefts reserved</p1>
    </footer>
</body>
</html>


