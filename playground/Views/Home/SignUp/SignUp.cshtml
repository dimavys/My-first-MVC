@model playground.Models.Repository
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Insertion</title>
    <link rel="stylesheet" href="/css/styles.css" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <style>
        h4 {
            text-align: center;
            font-size: 250%;
            position: relative;
            background: #b30000;
        }
        form {
            width: 50%;
        }
        p1 {
            font-size: 150%;
        }

        footer {
            position: fixed;
            width: 100%;
            left: 0;
            bottom: 0;
            background: #b30000;
            color: black;
        }
    </style>
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>Insert data</h4></div>
        <center>
            <form class="p-a-1" asp-action="SignUp" method="post">
                <div asp-validation-summary="All"></div>
                <div class="form-group">
                    <label asp-for="nickname">Insert nickname:</label>
                    <input class="form-control" asp-for="nickname" />
                </div>
                <div class="form-group">
                    <label asp-for="password">Insert password:</label>
                    <input type="password" class="form-control" asp-for="password" />
                </div>
                <div class="text-center">
                    <button class="btn btn-primary" type="submit">
                        Sign Up
                    </button>
                </div>
            </form>
        </center>
    </div>
    <footer>
        <p1>All rights and lefts reserved</p1>
    </footer>
</body>
</html>

